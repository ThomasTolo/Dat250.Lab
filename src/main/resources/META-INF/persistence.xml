<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="polls">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>no.hvl.Lab.Domain.Poll</class>
    <class>no.hvl.Lab.Domain.User</class>
    <class>no.hvl.Lab.Domain.Vote</class>
    <class>no.hvl.Lab.Domain.VoteOption</class>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
  <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:polls;DB_CLOSE_DELAY=-1;LOCK_TIMEOUT=10000"/>
      <property name="jakarta.persistence.jdbc.user" value="sa"/>
      <property name="jakarta.persistence.jdbc.password" value=""/>
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.highlight_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
